@model VehicleDto

<form>
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-dark text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning"> @string.Format("{0:c}", Model.Price)</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.PhotoUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge bg-primary text-success p-3 border">@Model.Brand.Name</span>
                                    <p class="text-secondary pt-3">Production Year: @Model.ProductionYear</p>
                                    <p class="text-secondary pt-3">Color: @Model.Color.Name</p>
                                    <p class="text-secondary pt-3">Fuel: @Model.FuelType.Name</p>
                                    <p class="text-secondary pt-3">KM: @Model.Mileage</p>
                                    <p class="text-secondary pt-3">Gearbox: @Model.Gearbox.Name</p>
                                    <p class="text-secondary pt-3">Type: @Model.VehicleType.Name</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-dark">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                </div>
                
            </div>
        </div>
    </div>
</form>

