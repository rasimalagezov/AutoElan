@model ColorDto

<form asp-action="ColorEdit">
    <br />
    <div class="container col-9 border p-3">
        <h1 class="text-white text-center">Update Color</h1>
        <input hidden asp-for="Id" />
        <hr />
        <div class="row">
            <div class="col-4 text-end">
                <label class="control-label pt-2" style="font-size:20px;">Color Name</label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-3">
            </div>
            <div class="col-4 offset-1">
                <a class="btn-primary btn form-control" asp-action="ColorIndex">Back to List</a>
            </div>
            <div class="col-4">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
