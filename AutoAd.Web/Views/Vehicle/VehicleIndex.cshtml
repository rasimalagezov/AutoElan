@model IEnumerable<VehicleDto>


<div class="col-12 card mx-auto shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="text-center">
                <h1 class="text-white">Vehicles</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4 col-12">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-outline-primary" asp-action="VehicleCreate"><i class="bi bi-plus-square"></i> Create New Vehicle</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Brand
                    </th>
                    <th>
                        Model
                    </th>
                    <th>
                        Year
                    </th>
                    <th>
                        Mileage
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Color
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Fuel
                    </th>
                    <th>
                        Gearbox
                    </th>
                    <th>
                        Photo
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Brand.Name
                        </td>
                        <td>
                            @item.Model.Name
                        </td>
                        <td>
                            @item.ProductionYear
                        </td>
                        <td>
                            @item.Mileage
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Color.Name
                        </td>
                        <td>
                            @item.VehicleType.Name
                        </td>
                        <td>
                            @item.FuelType.Name
                        </td>
                        <td>
                            @item.Gearbox.Name
                        </td>
                        <td>
                            @item.PhotoUrl
                        </td>
                        <td>
                            <a asp-action="VehicleEdit" asp-route-vehicleId="@item.Id" class="btn btn-success">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="VehicleDelete" asp-route-vehicleId="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
